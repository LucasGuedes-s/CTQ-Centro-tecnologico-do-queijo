// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  senha   String
  nome    String?
  pedidos pedidos[]
}

model pedidos {
  id         Int      @id @default(autoincrement())
  email      String
  produto    String
  quantidade Int
  cidade     String
  estado     String
  cep        Int
  endereco   String
  data       DateTime
  author     usuarios @relation(fields: [authorId], references: [id])
  authorId   Int
}

model administradores {
  id        Int    @id @default(autoincrement())
  matricula Int
  senha     String
}
