generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  id    Int     @id @default(autoincrement())
  email String  @unique
  senha password
  nome  String?

}

model pedidos {
  id        Int     @id @default(autoincrement())
  produto   String
  quantidade Int
  cidade String @db.VarChar(15)
  estado String @db.VarChar(10)
  cep Int
  endereco String @db.VarChar(50)
  data String
  
  id_usuario  @relation("usuario" fields: [usuarioId], references: [id])
}